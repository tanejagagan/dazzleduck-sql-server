<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- File path provided at runtime -->
    <property name="LOG_FILE" value="${LOG_FILE:-app.log}" />

    <!-- ================= CONSOLE APPENDER ================= -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level [%thread] %logger{36} %X{request_id:--} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- ================= FILE (JSON) APPENDER ================= -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>${LOG_FILE}</file>
        <append>true</append>

        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>

                <!-- Timestamp in ISO-8601 format -->
                <timestamp>
                    <fieldName>timestamp</fieldName>
                    <timeZone>UTC</timeZone>
                    <pattern>yyyy-MM-dd'T'HH:mm:ss.SSS'Z'</pattern>
                </timestamp>

                <!-- Log level -->
                <logLevel>
                    <fieldName>level</fieldName>
                </logLevel>

                <!-- Thread name -->
                <threadName>
                    <fieldName>thread</fieldName>
                </threadName>

                <!-- Logger name -->
                <loggerName>
                    <fieldName>logger</fieldName>
                </loggerName>

                <!-- Log message -->
                <message>
                    <fieldName>message</fieldName>
                </message>

                <!-- MDC (Mapped Diagnostic Context) -->
                <mdc>
                    <fieldName>mdc</fieldName>
                </mdc>

                <!-- Marker (if present) -->
                <logstashMarkers>
                    <fieldName>marker</fieldName>
                </logstashMarkers>

                <!-- Stack trace (if exception present) -->
                <stackTrace>
                    <fieldName>stack_trace</fieldName>
                    <throwableConverter class="net.logstash.logback.stacktrace.ShortenedThrowableConverter">
                        <maxDepthPerThrowable>30</maxDepthPerThrowable>
                        <maxLength>2048</maxLength>
                        <shortenedClassNameLength>20</shortenedClassNameLength>
                        <rootCauseFirst>true</rootCauseFirst>
                    </throwableConverter>
                </stackTrace>

            </providers>
        </encoder>
    </appender>

    <!-- ================= ROOT ================= -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

</configuration>